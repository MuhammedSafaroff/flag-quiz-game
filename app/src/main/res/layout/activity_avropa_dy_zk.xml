<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".AvropaZKActivity"    android:background="@drawable/bg9">    <RelativeLayout        android:id="@+id/avropaZKDYpuanbasliq"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/avropaZKDYpuan"            android:layout_width="120dp"            android:layout_height="60dp"            android:text="Puan:10"            android:gravity="center"            android:background="@drawable/bg4"            android:textSize="24sp"            android:textColor="#fff"            android:textStyle="bold|italic"            android:layout_margin="10dp"            android:layout_centerVertical="true"/>        <TextView            android:id="@+id/saniye"            android:layout_width="40dp"            android:layout_height="40dp"            android:text="90"            android:gravity="center"            android:background="@drawable/bg12"            android:textSize="18sp"            android:textColor="#fff"            android:textStyle="bold|italic"            android:layout_margin="10dp"            android:layout_centerInParent="true"/>        <LinearLayout            android:layout_width="115dp"            android:layout_height="55dp"            android:layout_alignParentEnd="true"            android:layout_alignParentRight="true"            android:layout_marginEnd="10dp"            android:layout_marginRight="10dp"            android:layout_centerVertical="true"            android:orientation="horizontal"            android:gravity="center_vertical"            android:background="@drawable/agbg1"            android:padding="5dp">            <ImageView                android:id="@+id/avropaZKDYcan1"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_weight="1"                android:src="@drawable/ic_favorite_black_aktiv_24dp"                />            <ImageView                android:id="@+id/avropaZKDYcan2"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_weight="1"                android:src="@drawable/ic_favorite_black_aktiv_24dp"                />            <ImageView                android:id="@+id/avropaZKDYcan3"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_weight="1"                android:src="@drawable/ic_favorite_black_aktiv_24dp"                />        </LinearLayout>    </RelativeLayout>    <ImageView        android:id="@+id/avropaZKDYresim"        android:layout_width="match_parent"        android:layout_height="220dp"        android:layout_marginRight="10dp"        android:layout_marginLeft="10dp"        android:layout_marginStart="10dp"        android:layout_marginEnd="10dp"        android:layout_marginTop="30dp"        android:paddingLeft="10dp"        android:paddingStart="10dp"        android:paddingRight="10dp"        android:paddingEnd="10dp"        android:paddingBottom="20dp"        android:paddingTop="20dp"        android:background="@drawable/agbg2"        android:layout_centerHorizontal="true"        android:layout_below="@+id/avropaZKDYpuanbasliq"        />    <TextView        android:id="@+id/avropaZKDYisim"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_above="@+id/alt1"        android:layout_below="@+id/avropaZKDYresim"        android:gravity="center"        android:text="Azerbaycan"        android:textColor="#fff"        android:textSize="28sp"        android:textStyle="bold|italic"        android:shadowRadius="3"        android:shadowDy="3"        android:shadowDx="3"        android:shadowColor="#222"/>    <LinearLayout        android:id="@+id/alt1"        android:layout_width="match_parent"        android:layout_height="80dp"        android:layout_alignParentBottom="true">        <ImageButton            android:id="@+id/avropaZKbtnyanlis"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:layout_margin="10dp"            android:background="@drawable/oyunbtnyanlis"            android:src="@drawable/ic_close_black_24dp"            />        <ImageButton            android:id="@+id/avropaZKbtndogru"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:layout_margin="10dp"            android:src="@drawable/ic_check_black_24dp"            android:background="@drawable/oyunbtndogru"            />    </LinearLayout></RelativeLayout>