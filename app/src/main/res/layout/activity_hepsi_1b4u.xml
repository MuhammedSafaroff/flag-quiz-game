<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hepsi1B4UActivity"
    android:background="@drawable/bg5">
    <RelativeLayout
        android:id="@+id/hepsi1B4Upuanbasliq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hepsi1B4Upuan"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Puan:10"
            android:gravity="center"
            android:background="@drawable/bg4"
            android:textSize="24sp"
            android:textColor="#fff"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/agbg1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/hepsi1B4Ucan1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_favorite_black_aktiv_24dp"
                />
            <ImageView
                android:id="@+id/hepsi1B4Ucan2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_favorite_black_aktiv_24dp"
                />
            <ImageView
                android:id="@+id/hepsi1B4Ucan3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_favorite_black_aktiv_24dp"
                />


        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/hepsi1B4Uresim"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:background="@drawable/agbg2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hepsi1B4Upuanbasliq"

        />



    <LinearLayout
        android:id="@+id/hepsi1B4ULinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_below="@+id/hepsi1B4Uresim"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">






    </LinearLayout>



</RelativeLayout>