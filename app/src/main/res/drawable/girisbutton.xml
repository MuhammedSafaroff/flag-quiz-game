<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <layer-list>
        <!-- SHADOW -->
        <item>
            <shape>
                <solid android:color="#0063B2"/>
                <!-- alttan gölge -->
                <corners android:radius="19dp"/>
            </shape>
        </item>
        <!-- BUTTON alttan gölge
          android:right="5px" to make it round-->
        <item
            android:bottom="5px"
            >
            <shape>
                <padding android:bottom="5dp" android:right="2dp"/>
                <gradient android:startColor="#0B2636" android:centerColor="#286E98" android:endColor="#0B2636" android:angle="90"/>
                <corners
                    android:radius="19dp"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
            </shape>
        </item>

    </layer-list>
</item>

<item android:state_pressed="true">
    <layer-list>
        <!-- SHADOW -->
        <item>
            <shape>
                <solid android:color="#102746"/>
                <corners android:radius="19dp"/>

            </shape>
        </item>
        <!-- BUTTON -->
        <item android:bottom="5px" android:right="2dp" >
            <shape>
                <padding android:bottom="5dp"/>
                <gradient android:startColor="#0B2636" android:centerColor="#286E98" android:endColor="#0B2636" android:angle="90"/>
                <corners
                    android:radius="19dp"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
            </shape>
        </item>
    </layer-list>
</item>
</selector>
