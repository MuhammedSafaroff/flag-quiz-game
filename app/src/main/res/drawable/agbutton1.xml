<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <layer-list>
        <!-- SHADOW -->
        <item>
            <shape>
                <solid android:color="#900000"/>
                <!-- alttan gölge -->
                <corners android:radius="19dp"/>
            </shape>
        </item>
        <!-- BUTTON alttan gölge
          android:right="5px" to make it round-->
        <item
            android:bottom="5px"
            >
            <shape>
                <padding android:bottom="5dp" android:right="2dp"/>
                <gradient android:startColor="#E0E0E0" android:centerColor="#ffffff" android:endColor="#E0E0E0" android:angle="90"/>
                <corners
                    android:radius="19dp"/>
            </shape>
        </item>
    </layer-list>
</item>

<item android:state_pressed="true">
    <layer-list>
        <!-- SHADOW -->
        <item>
            <shape>
                <solid android:color="#8BD1DDEE"/>
                <corners android:radius="19dp"/>

            </shape>
        </item>
        <!-- BUTTON -->
        <item android:bottom="5px" android:right="2dp" >
            <shape>
                <padding android:bottom="5dp"/>
                <gradient android:startColor="#E0E0E0" android:centerColor="#ffffff" android:endColor="#E0E0E0" android:angle="90"/>
                <corners
                    android:radius="19dp"/>
            </shape>
        </item>
    </layer-list>
</item>
</selector>
